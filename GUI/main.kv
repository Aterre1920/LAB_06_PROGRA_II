<Programa>:
    rows: 3
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
    Titulo:
    Cuerpo:

<Titulo>:
    rows: 1
    canvas:
        Color:
            rgb: 0,0,1
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: 'RESPONDE R√ÅPIDO'
        font_size: 40

<Cuerpo>:
    row:2
    cols: 6
    respuesta_text_input: respuesta
    canvas:
        Color:
            rgb: 0,0,1
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        id:pantalla2
        text: ''
        font_size: 50
    Label:
        text: ' + '
        font_size: 50
    Label:
        id:pantalla3
        text: ''
        font_size: 50
    Label:
        text: ' = '
        font_size: 50
    TextInput:
        id:respuesta
        font_size: 50
        multiline: False
        halig: 'center'
        on_text_validate:root.comparar_suma()
    Button:
        text: "GO"
        size_hint: 1, .1
        on_release: root.Go()
    Label:
        font_size: 40
    Label:
        id:pantalla4
        text: 'Tiempo Restante:'
        font_size: 40
    Label:
        font_size: 40
    Label:
        font_size: 40
    Label:
        font_size: 40
        text: 'Racha:'
    Label:
        id:pantalla5
        text:'0'
        font_size: 40


